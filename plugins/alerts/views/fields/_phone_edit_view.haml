- if single_editing_mode
  %input{ ko(value: :value, hasfocus: true, valueUpdate: :afterkeydown, event: {keydown: :keyPress, blur: :save}, attr: {id: "'phone-input-' + code"}), type: :tel, placeholder: "85512345678"}
- else
  %input{ ko(value: :value, attr: {id: "'phone-input-' + code"}), type: :tel, placeholder: "85512345678" }
  .clear
