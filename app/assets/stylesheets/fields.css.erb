.field_option {
  cursor: pointer;
}

<% Field::BaseKinds.each do |kind| %>
<%=   ".#{kind[:small_css_class]} {" %>

    display: inline-block;
    vertical-align: middle;
    height: 21px;
    min-width: 20px;
    padding-left: 27px;
    margin: 4px 2px 4px 5px;
    <%= "background:url(/assets/fields_small_icons/#{kind[:name]}.png) no-repeat;" %>
}
<% end %>

<% Field::PluginKinds.each do |name, kind| %>
  <%=   ".#{kind[:small_css_class]} {" %>
      display: inline-block;
      vertical-align: middle;
      height: 21px;
      min-width: 20px;
      padding-left: 27px;
      margin: 4px 2px 4px 5px;
      <%= "background:url(/assets/fields_small_icons/#{name}.png) no-repeat;" %>
  }
<% end %>

<% Field::Kinds.each do |name, kind| %>
  <%=   ".f#{name} {" %>
      <%= "background:url(/assets/fields_small_buttons/f#{name}.png) no-repeat;" %>
  }
<% end %>


<% ['name', 'id', 'location'].each do |name| %>
  <%=   ".f#{name} {" %>
      <%= "background:url(/assets/fields_small_buttons/f#{name}.png) no-repeat;" %>
  }
<% end %>

button.icon_button.active {
  background-position: 0 -60px !important;
}



