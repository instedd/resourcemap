- if single_editing_mode
  = ko_number_field_tag :value, hasfocus: true, event: {keydown: :keyPress, blur: :save}, css: { error: :error }, html: {step: "any"}, attr: {id: "'numeric-input-' + code"}
- else
  = ko_number_field_tag :value, css: { error: :error }, html: {step: "any"}, attr: {id: "'numeric-input-' + code"}
= ko_link_to_root '?', :showPopupWithMaxValueOfProperty, style: 'text-decoration:underline', tabindex: -1
